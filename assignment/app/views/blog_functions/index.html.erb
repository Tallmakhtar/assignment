<h1>List of blog_functions</h1>
<p><%= notice %></p>
<table>
    <tr>
        <th> Name  </th>
        <th> Email  </th>
        <th> Content  </th>
    </tr>
    <% @blog_functions.each do |blog_function| %>
    <tr>
        <td><%= blog_function.name %></td>
        <td><%= blog_function.email %></td>
        <td><%= blog_function.content %></td>
        <td><%= link_to 'check blog_function details', blog_function_path(blog_function.id) %></td>
         <td><%= link_to 'edit blog_function', edit_blog_function_path(blog_function.id) %></td>
        <td><%= link_to "Delete blog", blog_function_path(blog_function.id), method: :delete ,data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
</table>
<br>
<%= link_to 'post a new blog_function', new_blog_function_path %>

