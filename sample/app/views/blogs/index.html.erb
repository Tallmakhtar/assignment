<h1>List of blogs</h1>
<p><%= notice %></p>
    <table>
  <tr>
    <th>Title</th>
    <th>Content</th></th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.tittle %></td>
    <td><%= blog.content %></td>
    <td><%= link_to 'Check the details', blog_path(blog.id) %></td>
    <td><%= link_to 'edit this blog', edit_blog_path(blog.id) %></td>
    <td><%= link_to link_to 'Delete this blog', blog_path(blog.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
   

   

  </tr>
<% end %>
</table>
<%= link_to 'Return to blog list page', new_blog_path %>
